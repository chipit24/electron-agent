{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "src/renderer.ts",
    "src/settings/renderer.ts",
    "src/main.tsx",
    "src/app.tsx",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/main.ts",
    "src/preload.ts",
    "src/apiHandlers",
    "node_modules"
  ]
}
